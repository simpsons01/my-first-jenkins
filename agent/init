[[ -f "/home/jenkins/.nvm"  ]]
if [[ $? = 1  ]]; then 
  mv /root/.nvm /home/jenkins/.nvm
  export NVM_DIR="/home/jenkins/.nvm"
  export PATH="/home/jenkins/.nvm/versions/v${NODE_VERSION}/bin:${PATH}" 
  echo "export NVM_DIR=${NVM_DIR}" >> /home/jenkins/.bashrc 
  echo "export PATH=${PATH}" >> /home/jenkins/.bashrc 
  chown -R jenkins:jenkins /home/jenkins/.nvm
fi

. /usr/local/bin/setup-sshd